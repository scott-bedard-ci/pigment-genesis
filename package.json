{
  "name": "@customink/pigment-genesis",
  "version": "1.0.0",
  "description": "CustomInk's comprehensive design system built with React, TypeScript, Tailwind CSS, and Storybook",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "claude-info": "echo 'ðŸ“– Claude Code: Read CLAUDE.md first!' && echo 'ðŸŽ¨ Ready to build components from Figma designs only'",
    "component-checklist": "cat scripts/new-component.md",
    "figma-checklist": "cat scripts/figma-extraction-checklist.md",
    "extraction-guide": "cat docs/figma-extraction-guide.md",
    "dev": "storybook dev -p 6006",
    "build": "tsup",
    "build-storybook": "storybook build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testNamePattern=\"accessibility\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "validate-tokens": "node scripts/validate-tokens.ts",
    "extract-figma-tokens": "node scripts/extract-figma-tokens.ts",
    "update-design-tokens": "npm run extract-figma-tokens && npm run build-tokens",
    "build-tokens": "node scripts/build-token-files.ts",
    "sync-swiftui-tokens": "node scripts/generate-swiftui-tokens.ts",
    "rebrand": "npm run update-design-tokens && npm run validate-tokens && npm run build && npm run build-storybook",
    "pre-component": "npm run validate-tokens",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint && npm run type-check"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@testing-library/react": "^15.0.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/addon-a11y": "^8.0.8",
    "@storybook/addon-docs": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-storybook": "^0.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-axe": "^8.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "storybook": "^8.0.8",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "tsup": "^8.0.2",
    "vite": "^5.2.10",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "tailwindcss",
    "storybook",
    "components",
    "ui",
    "customink"
  ],
  "author": "CustomInk Design System Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/customink/pigment-genesis.git"
  },
  "homepage": "https://customink.github.io/pigment-genesis",
  "bugs": {
    "url": "https://github.com/customink/pigment-genesis/issues"
  }
}